generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider =  "mongodb"
    url = env("DATABASE_URL")
}

model User {
    id             String    @id @default(auto()) @map("_id") @db.ObjectId
    name           String?
    email          String?   @unique
    emailVerified  DateTime?
    role           Role      @default(USER)
    image          String?
    hashedPassword String?
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt
}

enum Role {
    USER
    ADMIN
}

model Product {
    id                  String    @id @default(auto()) @map("_id") @db.ObjectId
    title               String    @unique
    description         String?
    category            String
    price               Float
    discountPercentage  Float
    rating              Float
    stock               Int
    brand               String?
    weight              Float
    dimensions          Dimensions?
    images              String[]
    thumbnail           String
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt
}

type Dimensions {
    width  Float
    height Float
    depth  Float?
}